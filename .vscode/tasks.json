{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build current C file (MSVC)",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/nologo",

                "/Fo:build\\",
                "/Fd:build\\",
                "/Fe:build\\${fileBasenameNoExtension}.exe",

                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
